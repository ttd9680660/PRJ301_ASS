<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListStudentController</servlet-name>
        <servlet-class>controller.student.ListStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupController</servlet-name>
        <servlet-class>controller.lecturer.GroupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseController</servlet-name>
        <servlet-class>controller.CourseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TranscriptController</servlet-name>
        <servlet-class>controller.student.TranscriptController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewTransController</servlet-name>
        <servlet-class>controller.student.ViewTransController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewGroup</servlet-name>
        <servlet-class>controller.student.ViewGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerCourseController</servlet-name>
        <servlet-class>controller.lecturer.LecturerCourseControll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerGroupController</servlet-name>
        <servlet-class>controller.lecturer.LecturerGroupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerStudentController</servlet-name>
        <servlet-class>controller.lecturer.LecturerStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecStudent</servlet-name>
        <servlet-class>controller.lecturer.LecStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListStudentController</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupController</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseController</servlet-name>
        <url-pattern>/course</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TranscriptController</servlet-name>
        <url-pattern>/transcript</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewTransController</servlet-name>
        <url-pattern>/viewtrans</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewGroup</servlet-name>
        <url-pattern>/viewgroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerCourseController</servlet-name>
        <url-pattern>/leccourse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerGroupController</servlet-name>
        <url-pattern>/lecgroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerStudentController</servlet-name>
        <url-pattern>/lecstudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecStudent</servlet-name>
        <url-pattern>/lecstu</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
